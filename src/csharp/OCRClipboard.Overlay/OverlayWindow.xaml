        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True" Background="#66000000"
        Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize"
        KeyDown="OnKeyDown" MouseLeftButtonDown="OnMouseDown" MouseMove="OnMouseMove" MouseLeftButtonUp="OnMouseUp">
    <Canvas>
        <Rectangle x:Name="SelectionRect" Stroke="#FFFFFFFF" StrokeThickness="2" Fill="#33FFFFFF" Visibility="Collapsed" />
    </Canvas>
    
